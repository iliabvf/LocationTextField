    <dependencies>
        <dependency force="true" org="com.vaadin" name="vaadin" rev="6.7+" conf="build,vaadin,samples->default"/>
        <dependency force="true" org="com.google" name="gwt" rev="2.3.0" conf="build->compile;samples->runtime"/>
