        <dependency force="true" org="org.slf4j" name="slf4j" rev="1.6.1" conf="build,samples,package->log4j"/>
        <dependency force="true" org="javax.validation" name="validation-api" rev="1.0.0.GA" conf="build,samples->default"/>
    </dependencies>

</ivy-module>
